<%= render 'navbar' %>

<table class="table table-striped" id="summary-table">
  <thead>
    <tr>
      <th>#</th>
      <th>Feature Name</th>
      <th>Number of Test Case</th>
      <th>Test Case Run Count</th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 %>
    <% @feature_names.each do |feature_name| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= link_to feature_name.feature_name, "#{controller_name}/#{feature_name.feature_name}" %></td>
        <td>Blank</td>
        <td>Blank</td>
      </tr>
      <% i = i + 1 %>
    <% end %>
  </tbody>
</table>